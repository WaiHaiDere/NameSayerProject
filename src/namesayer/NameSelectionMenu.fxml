<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="namesayer.NameSelectionMenu">
   <children>
      <HBox prefHeight="37.0" prefWidth="700.0">
         <children>
            <Button fx:id="mainMenuBtn" mnemonicParsing="false" onAction="#mainMenuBtnClicked" text="Main Menu">
               <HBox.margin>
                  <Insets left="5.0" top="5.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
      <Label prefWidth="455.0" text="Enter the names you wish to practice">
         <font>
            <Font size="28.0" />
         </font>
         <padding>
            <Insets top="-5.0" />
         </padding>
      </Label>
      <Pane maxHeight="80.0" minHeight="75.0" prefHeight="75.0" prefWidth="700.0">
         <children>
            <ComboBox fx:id="inputMethodChoice" layoutX="204.0" layoutY="2.0" onAction="#onInputSelected" prefHeight="25.0" prefWidth="292.0" promptText="&lt;&lt; Choose Input Method &gt;&gt;" />
            <TextField fx:id="nameInputField" layoutX="204.0" layoutY="38.0" prefHeight="25.0" prefWidth="292.0" />
            <Button fx:id="addNameBtn" layoutX="511.0" layoutY="38.0" mnemonicParsing="false" onAction="#addNameBtnClicked" prefHeight="25.0" prefWidth="25.0" />
         </children>
      </Pane>
      <ScrollPane hbarPolicy="NEVER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="650.0">
         <content>
            <ListView fx:id="namesListView" minHeight="-Infinity" minWidth="-Infinity" mouseTransparent="true" prefHeight="300.0" prefWidth="650.0" />
         </content>
      </ScrollPane>
      <Pane maxHeight="70.0" minHeight="70.0" prefHeight="70.0" prefWidth="200.0">
         <children>
            <Button fx:id="practiceButton" layoutX="290.0" layoutY="13.0" mnemonicParsing="false" onAction="#practiceBtnClicked" prefHeight="30.0" prefWidth="120.0" text="Practice">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="deleteBtn" layoutX="30.0" layoutY="20.0" mnemonicParsing="false" text="Remove" />
         </children>
      </Pane>
   </children>
</VBox>
